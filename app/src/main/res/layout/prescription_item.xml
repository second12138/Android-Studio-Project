<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFE6">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <TextView
            android:id="@+id/MedicationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingLeft="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Medication Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/UserInfoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/MedicationView"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="User Info"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/DosageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/PillsPresItem"
            android:paddingEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Dosage Info"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/PillsPresItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="12dp"
            android:text="pills"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/TODInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/DosageView"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Time Of Day"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>